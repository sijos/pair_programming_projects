<h1><%= @band.name %></h1>

<%= render "shared/errors" %>

<h3>Albums</h3>
<br>
<ul>
<% @band.albums.each do |album| %>
  <li> <a href="/albums/<%= album.id %>"> <%= album.title %> </a></li>
<% end %>
</ul>
<br>

<h3>Links</h3>

<ul>
<li> <%= link_to "Add New Album", new_album_url %> </li>
<li> <%= link_to "Edit #{@band.name}", edit_band_url(@band) %> </li>
<li> <%= link_to "Delete #{@band.name}", band_url(@band), method: :delete %> </li>
<li> <%= link_to "All Bands", bands_url %> </li>
</ul>

